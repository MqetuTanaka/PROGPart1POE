<Window x:Class="ProgPOEP3.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Quiz" Height="450" Width="600">
	<Grid Margin="10">
		<StackPanel>
			<TextBlock x:Name="QuestionText" FontSize="18" FontWeight="Bold" TextWrapping="Wrap" Margin="0,10"/>
			<ListBox x:Name="AnswerList" SelectionMode="Single" Margin="0,10"/>

			<Button x:Name="SubmitAnswer" Content="✅ Submit Answer" Click="SubmitAnswer_Click" Margin="5"/>
			<TextBlock x:Name="FeedbackText" FontSize="14" Margin="0,10" Foreground="DarkGreen"/>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
				<Button x:Name="RetryButton" Content="🔁 Retry Quiz" Width="120" Click="RetryButton_Click" Visibility="Hidden" Margin="10"/>
				<Button Content="💬 Go to Chatbot" Click="GoToChatbot_Click" Width="120" Margin="10"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
