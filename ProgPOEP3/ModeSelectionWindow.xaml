<Window x:Class="ProgPOEP3.ModeSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Mode" Height="250" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Background="#1E1E2F">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="Choose a Mode:" FontSize="18" Foreground="White" Margin="0 0 0 15" TextAlignment="Center"/>
            <Button Content="?? Take a Quiz" Click="Quiz_Click" Width="180" Height="40" Margin="0 0 0 10"/>
            <Button Content="?? Talk to Chatbot" Click="Chatbot_Click" Width="180" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
