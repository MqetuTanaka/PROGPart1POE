<Window x:Class="ProgPOEP3.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up" Height="200" Width="400">
	<Grid Margin="10">
		<StackPanel VerticalAlignment="Center">
			<TextBlock Text="Sign Up" FontSize="18" FontWeight="Bold" Margin="0 0 0 10"/>
			<TextBlock Text="Choose a username:"/>
			<TextBox x:Name="NewUsername" Width="200" Margin="0 0 0 10"/>
			<Button Content="Register" Width="100" Click="Register_Click"/>
			<TextBlock x:Name="StatusText" Margin="0 10 0 0"/>
		</StackPanel>
	</Grid>
</Window>

